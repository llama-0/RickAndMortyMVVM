<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:id="@+id/recycler_error_layout"
    tools:alpha="0.4"
    tools:visibility="visible">

    <TextView
        android:id="@+id/tv_no_internet_connection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_internet_connection"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_cloud_off_24px"
        app:layout_constraintBottom_toTopOf="@+id/tv_no_internet_connection"
        app:layout_constraintEnd_toEndOf="@+id/tv_no_internet_connection"
        app:layout_constraintStart_toStartOf="@+id/tv_no_internet_connection"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btn_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/btn_name_retry"
        app:layout_constraintEnd_toEndOf="@+id/tv_no_internet_connection"
        app:layout_constraintStart_toStartOf="@+id/tv_no_internet_connection"
        app:layout_constraintTop_toBottomOf="@+id/tv_no_internet_connection" />

</androidx.constraintlayout.widget.ConstraintLayout>