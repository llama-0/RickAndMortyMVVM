<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/character_details_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textColor="@color/dark_grey"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:textAppearance="@tools:sample/first_names" />

    <TextView
        android:id="@+id/tvImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:linksClickable="true"
        tools:textAppearance="@tools:sample/lorem" />

    <LinearLayout
        android:id="@+id/basicDetailsLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/oval"
            android:contentDescription="@string/status_badge" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            tools:textAppearance="@tools:sample/lorem" />

        <TextView
            android:id="@+id/tvSpecies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            tools:textAppearance="@tools:sample/lorem" />

        <TextView
            android:id="@+id/tvGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            tools:textAppearance="@tools:sample/lorem" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/originLinerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvFirstSeenInTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/first_seen_in"
            android:textColor="@color/dark_grey"
            tools:textAppearance="@tools:sample/lorem" />

        <TextView
            android:id="@+id/tvFirstSeenIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            tools:textAppearance="@tools:sample/lorem" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/locationLinerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvLastKnownLocationTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/last_seen_in"
            android:textColor="@color/dark_grey"
            tools:textAppearance="@tools:sample/lorem" />

        <TextView
            android:id="@+id/tvLastKnownLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            tools:textAppearance="@tools:sample/lorem" />
    </LinearLayout>


</LinearLayout>